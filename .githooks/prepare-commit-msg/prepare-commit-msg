if [ $? -ne 0 ]; then
    echo -e "\e[0m\e[1m\e[31m\e[5m"
    echo -e "ðŸš¨ \e[5m Your commit is not acceptable \e[25mðŸš¨"
    echo -e "\e[0m\e[1m\e[33m"
